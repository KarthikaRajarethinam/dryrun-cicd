// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "experimentalDecorators": true,
"emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src"
  },
    "paths": {
        "@shared/*": ["../../shared/*"]
  },
  "include": ["src/**/*"]
}
