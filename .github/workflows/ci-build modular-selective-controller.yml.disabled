name: Selective Modular Controller

on:
  
  workflow_dispatch:
    inputs:
      microservice-a:
        description: "Run microservice-a"
        required: false
        default: "false"
        type: choice
        options: ["true", "false"]
      microservice-b:
        description: "Run microservice-b"
        required: false
        default: "false"
        type: choice
        options: ["true", "false"]
      frontend:
        description: "Run frontend"
        required: false
        default: "false"
        type: choice
        options: ["true", "false"]

permissions:
  id-token: write
  contents: read

jobs:
  detect-changes:
    
    runs-on: ubuntu-latest
    outputs:
      microservice-a: ${{ steps.filter.outputs.microservice-a }}
      microservice-b: ${{ steps.filter.outputs.microservice-b }}
      frontend: ${{ steps.filter.outputs.frontend }}
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
        with:
          fetch-depth: 0

      - name: Detect changes
        id: filter
        uses: dorny/paths-filter@v3
        with:
          filters: |
            microservice-a:
              - 'cloud-dry-run/backend/microservice-a/**'
            microservice-b:
              - 'cloud-dry-run/backend/microservice-b/**'
            frontend:
              - 'cloud-dry-run/frontend/**'

  microservice-a:
    needs: [detect-changes]
    if: |
      (github.event_name == 'workflow_dispatch' && github.event.inputs.microservice-a == 'true') ||
      (github.event_name == 'push' && needs.detect-changes.outputs.microservice-a == 'true')
    uses: ./.github/workflows/microservice-a-pipeline.yml

  microservice-b:
    needs: [detect-changes]
    if: |
      (github.event_name == 'workflow_dispatch' && github.event.inputs.microservice-b == 'true') ||
      (github.event_name == 'push' && needs.detect-changes.outputs.microservice-b == 'true')
    uses: ./.github/workflows/microservice-b-pipeline.yml

  frontend:
    needs: [detect-changes]
    if: |
      (github.event_name == 'workflow_dispatch' && github.event.inputs.frontend == 'true') ||
      (github.event_name == 'push' && needs.detect-changes.outputs.frontend == 'true')
    uses: ./.github/workflows/frontend-pipeline.yml
